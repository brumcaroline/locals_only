<% wishlist_item = WishlistItem.find_by(activity: @activity, wishlist: current_user.wishlists.first)   %>
  <% if wishlist_item.present? %>
    <%= link_to wishlist_item_path(wishlist_item), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{@activity.title} from your wishlist?"} do %>
      <i class="animate__animated animate__heartBeat fas fa-heart"></i>
    <% end %>
  <% else %>
    <%= link_to activity_wishlist_items_path(@activity), data: {turbo_method: :post}  do %>
      <i class="animate__animated animate__heartBeat far fa-heart"></i>
