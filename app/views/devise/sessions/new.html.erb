<div class="banner">
<div class="container">
  <%# style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)"> %>

  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <div class="form-wrap">
        <div class="">
          <div class="text-center mb-5">
            <h2>Log in</h2>
          </div>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
            <div class="">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="">
              <%= f.button :submit, "Log in", class: "btn btn-primary" %>
            </div>
          <% end %>
          <div class="">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
